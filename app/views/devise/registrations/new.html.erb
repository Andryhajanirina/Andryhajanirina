<!-- Navigation start -->
  <%= render "layouts/navigation_top" %>
<!-- Navigation end -->
    
        <!-- Section - Contact Start -->
        <section id="new_registration" class="bg-gray-dark-2">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-8 text-center">
                        <h3 class="font-alt font-w-600 letter-spacing-2 title-extra-large text-uppercase text-white">Sign up</h3>
                        <p class="mt-3 text-gray text-extra-large"><i>Have a project you'd like to discuss?</i></p>
                        <span class="bg-base-color mt-4 mx-auto sep-line-medium-thick-long"></span>
                    </div>
                    <!-- //.col-lg-8 -->
                </div>
                <!-- //.row -->

                <div class="row justify-content-center mt-5 pt-lg-5 bg-gray rounded">
                    <div class="col-lg-8">
                      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                        <%= devise_error_messages! %>

                        <div class="row">
                          <!-- Lastname start -->
                          <div class="col-sm-6">
                            <div class="form-element">
                              <%= f.label :lastname %><br />
                              <%= f.text_field :lastname, autofocus: true, autocomplete: "lastname", class:"form-control" %>
                            </div>
                          </div>
                          <!-- Lastname end -->

                          <!-- Firstname start -->
                          <div class="col-sm-6">
                            <div class="form-element">
                              <%= f.label :firstname %><br />
                              <%= f.text_field :firstname, autocomplete: "firstname", class:"form-control" %>
                            </div>
                          </div>
                          <!-- Firstname end -->
                        </div>

                        <div class="row">
                          <!-- Email start -->
                          <div class="col-sm-6">
                            <div class="form-element">
                              <%= f.label :email %><br />
                              <%= f.email_field :email, autocomplete: "email", class:"form-control" %>
                            </div>
                          </div>
                          <!-- Email end -->
                          
                          <!-- Birthday start -->
                          <div class="col-sm-6">
                            <div class="form-element">
                              <%= f.label :birthday %><br />
                              <%= f.date_field :birthday, autocomplete: "birthday", class:"form-control" %>
                            </div>
                          </div>
                          <!-- Birthday end -->
                        </div>


                        <div class="row">
                          <!-- Password start -->
                          <div class="col-sm-6">
                            <div class="form-element">
                              <%= f.label :password %>
                              <% if @minimum_password_length %>
                              <em>(<%= @minimum_password_length %> characters minimum)</em>
                              <% end %><br />
                              <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
                            </div>
                          </div>
                          <!-- Password end -->

                          <!-- Password start -->
                          <div class="col-sm-6">
                            <div class="form-element">
                              <%= f.label :password_confirmation %><br />
                              <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
                            </div>
                          </div>
                          <!-- Password end -->
                        </div>


                        <div class="actions">
                          <%= f.submit "Sign up", class:"btn btn-base-color btn-block btn-large box-shadow-wide mt-5 mx-0 text-white" %>
                        </div>
                        <br>

                      <% end %>
                  </div>
            </div>
        </section>
