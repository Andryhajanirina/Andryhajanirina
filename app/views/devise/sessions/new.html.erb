<!-- Navigation start -->
  <%= render "layouts/navigation_top" %>
<!-- Navigation end -->
    
<!-- Section - login Start -->
<section id="new_session" class="bg-gray-dark-2">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h3 class="font-alt font-w-600 letter-spacing-2 title-extra-large text-uppercase text-white">Log in</h3>
                <p class="mt-3 text-gray text-extra-large"><i>Have a project you'd like to discuss?</i></p>
                <span class="bg-base-color mt-4 mx-auto sep-line-medium-thick-long"></span>
            </div>
            <!-- //.col-lg-8 -->
        </div>
        <!-- //.row -->

        <div class="row justify-content-center mt-5 pt-lg-5 bg-gray rounded">
            <div class="col-lg-8">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <!-- Email start -->
                <div class="row">
                  <div class="col-sm-12">
                    <div class="form-element">
                      <%= f.label :email %><br />
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
                    </div>
                  </div>
                </div>
                <!-- Email end -->

                <!-- Password start -->
                <div class="row">
                  <div class="col-sm-12">
                    <div class="form-element">
                      <%= f.label :password %><br />
                      <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
                    </div>
                  </div>
                </div>
                <!-- Password end -->
                <br>

                <% if devise_mapping.rememberable? -%>
                  <!-- Chexbox start -->
                  <div class="row">
                    <div class="col-sm-12">
                      <div class="form-element">
                        <%= f.check_box :remember_me %>
                        <%= f.label :remember_me %>
                      </div>
                    </div>
                  </div>
                  <!-- Chexbox end -->
                <% end -%>

                <div class="actions">
                  <%= f.submit "Log in", class:"btn btn-base-color btn-block btn-large box-shadow-wide mt-5 mx-0 text-white" %>
                </div>
                <br>

              <% end %>

            </div>
        </div>
    </div>
</section>
